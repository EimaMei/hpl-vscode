{
  "name": "hpl",
  "displayName": "HPL",
  "description": "VSCode extension for HPL.",
  "version": "0.0.3",
  "license": "MIT",
  "icon": "public/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Allyedge/hpl-vscode"
  },
  "publisher": "allyedge",
  "author": "Alim Arslan Kaya <alimarslank@gmail.com>",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:hpl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hpl.testCommand",
        "title": "Test HPL"
      }
    ],
    "languages": [
      {
        "id": "hpl",
        "aliases": [
          "HPL",
          "HOI4 Programming Language",
          "hpl"
        ],
        "extensions": [
          ".hpl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hpl",
        "scopeName": "source.hpl",
        "path": "./syntaxes/hpl.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.16.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  }
}
